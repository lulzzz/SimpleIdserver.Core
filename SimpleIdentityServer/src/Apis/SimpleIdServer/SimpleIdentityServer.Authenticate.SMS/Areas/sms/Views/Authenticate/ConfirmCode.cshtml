@{
    ViewBag.Title = "Confirm code";
}

@model SimpleIdentityServer.Authenticate.SMS.ViewModels.ConfirmCodeViewModel

@section PageTitle
{
    <h1>
        @ViewBag.Translations["login"]
    </h1>
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">@ViewBag.Translations["confirmation_code"]</div>
            <div class="panel-body">
                @using (Html.BeginForm("ConfirmCode", "Authenticate", null, FormMethod.Post))
                {
                    @Html.ValidationMessage("message_error")
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(i => i.Code)
                    <!-- Confirmation code -->
                    <fieldset class="form-group">
                        <label class="control-label">@ViewBag.Translations["code"]</label>
                        @Html.TextBoxFor(i => i.ConfirmationCode, new { @type = "number", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
                    </fieldset>
                    <!-- Submit buttons code -->
                    <fieldset class="form-group">
                        <button type="submit" class="btn btn-primary" name="Action" value="submit">@ViewBag.Translations["validate_confirmation_code"]</button>
                        <button type="submit" class="btn btn-primary" name="Action" value="resend">@ViewBag.Translations["resend_confirmation_code"]</button>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>