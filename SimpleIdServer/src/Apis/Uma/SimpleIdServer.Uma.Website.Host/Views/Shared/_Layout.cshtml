@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Security.Claims

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Resource server - @ViewBag.Title</title>
        <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap/bootstrap.css")" />
        <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap/bootstrap-theme.css")" />
        <link rel="stylesheet" href="@Url.Content("~/lib/datatable/datatables.min.css")" />
        <link rel="stylesheet" href="@Url.Content("~/lib/selectize/selectize.bootstrap3.css")" />
        <link rel="stylesheet" href="@Url.Content("~/css/home.index.css")" />
        <link rel="stylesheet" href="@Url.Content("~/css/tile.theme.css")" />
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <a href="@Url.Action("Index", "Home")">
                        <span class="navbar-brand">Resource server</span>
                    </a>
                </div>
                @if (ViewBag.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="@Url.Action("Index", "Resources")">My resources</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Shared", "Resources")">Resources shared with me</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "PendingRequests")">Pending requests</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Disconnect", "Authenticate")">Disconnect</a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="@Url.Action("Index", "Authenticate")">Authenticate</a>
                        </li>
                    </ul>
                }
            </div>
        </div>

        <div class="container">
            <div>
                @RenderSection("PageTitle", false)
            </div>
            <div>
                @RenderBody()
            </div>
        </div>
        <script type="text/javascript" src="@Url.Content("~/lib/jquery/jquery.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/lib/bootstrap/bootstrap.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/lib/datatable/datatables.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/lib/selectize/selectize.min.js")"></script>
        @RenderSection("Scripts", required: false)
        <script type="text/javascript">
            Selectize.define('no-delete', function (options) {
                this.deleteSelection = function () { };
            });
            $(document).ready(function () {
                $(function () {
                    $('[data-toggle="tooltip"]').tooltip();
                });
            });
        </script>
    </body>
</html>